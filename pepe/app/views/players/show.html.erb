<% title "Player profile: #{@player.name}" %>

<% if @player.image_url %>
<div class="content_image">
	<span></span>
	<%= image_tag @player.image_url %>	
</div>
<% end %>

<div id="info">
	<h2><%=h @player.name %></h2>
	<h3 class="fullname"><%=h @player.given_name %></h3>
	Born in <%=h @player.birth_city %>, <%=h @player.birth_country %> on <%=h @player.birthday %><br/>
	<a target="_blank" href="http://en.wikipedia.org<%= @player.url.url %> " ><%=h @player.url.url %></a>
</div>
<div id="contracts">
	<ul>
		<%= render :partial => 'contracts/club_contract', :collection => @player.contracts %>
	</ul>
</div>


